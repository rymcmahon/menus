<div class="nested-fields">
  <%= f.label :name, "Item Name", class:"control-label" %>
  <%= f.text_field :name, class:"form-control" %>
  <%= f.label :description, "Item Description", class:"control-label" %>
  <%= f.text_field :description, class:"form-control" %>
  <%= f.label :price, "Item Price", class:"control-label" %>
  <%= f.text_field :price, class:"form-control" %>
  <%= f.label :available %>
  <%= f.check_box :available %>
  <%= link_to_remove_association "remove item", f, class:"btn btn-danger btn-xs" %>
</div>