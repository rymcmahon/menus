<%= form_for @menu do |f| %>
  <% if @menu.errors.any? %>
    <%= render 'errors' %>
  <% end %>
  <div class="form-group" id="menu-name-card">
    <%= f.label :name,"Menu Name" %>
    <%= f.text_field :name, class:"form-control" %>
    <%= link_to_add_association 'Add Section', f, :sections, :data => {association_insertion_method: "append", association_insertion_node: "#place-here"}, class:"btn btn-info btn-sm section-btn" %>
  </div>
  <div class="section-nested">
    <div id="place-here">

    </div>
  </div>
  <%= f.fields_for :sections do |section| %>
    <%= render 'section_fields', :f => section %>
  <% end %>
  <div class="row submit-menu-btn-row">
    <div class="col-sm-12 col-md-4 col-lg-4 col-md-offset-4 col-lg-offset-4">
      <%= f.button @menu.new_record? ? "Create Menu" : "Update Menu", class:"btn btn-primary btn-lg full-btn" %>
    </div>
  </div>
<% end %>