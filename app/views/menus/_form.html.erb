<%= form_for @menu do |f| %>
  <% if @menu.errors.any? %>
    <%= render 'errors' %>
  <% end %>
  <div class="row">
    <div class="form-group col-sm-12 col-md-4 col-lg-4">
      <%= f.label :name,"Menu Name" %>
      <%= f.text_field :name, placeholder:"Lunch or Dinner or Bar", class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.fields_for :sections do |section| %>
    <%= render 'section_fields', :f => section %>
    <% end %>
    <%= link_to_add_association 'Add Section', f, :sections, :data => {"association-insertion-method" => "before" }, class:"btn btn-info btn-md section-btn" %>
  </div>
  <div>
    <%= f.button @menu.new_record? ? "Create Menu" : "Update Menu", class:"btn btn-success btn-default" %>
  </div>
<% end %>